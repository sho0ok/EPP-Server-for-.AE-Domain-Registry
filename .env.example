# EPP Server Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration (Oracle)
# =============================================================================
DB_HOST=localhost
DB_PORT=1521
DB_SERVICE=EPPDB
DB_USER=epp_user
DB_PASSWORD=change_me

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# EPP Server Configuration
# =============================================================================
EPP_HOST=0.0.0.0
EPP_PORT=700

# TLS Certificates
EPP_CERT=/path/to/server.crt
EPP_KEY=/path/to/server.key
EPP_CA=/path/to/ca.crt

# Session settings
SESSION_TIMEOUT=300
MAX_CONNECTIONS=100

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/epp-server/epp.log

# =============================================================================
# Registry Settings
# =============================================================================
REGISTRY_NAME=.AE Domain Registry
DEFAULT_DOMAIN_PERIOD=1
MAX_DOMAIN_PERIOD=10

# Supported TLDs
TLDS=ae,xn--mgbaam7a8h

# Restricted zones (require eligibility)
RESTRICTED_ZONES=co.ae,gov.ae,ac.ae,sch.ae,mil.ae,net.ae,org.ae
